{% extends 'base.html.twig' %}

{% block title %}Hello AccountController!{% endblock %}

{% block body %}
<div class = "row">
        <div class = "col-md-6 mx-auto text-center">
            <h1>Profile</h1>
            <img style="max-width: 250px;" src={{ vich_uploader_asset(app.user, 'imageFile') }}>
            <p>{{ app.user.email }}</p>
            <h2>{{ app.user.firstname ~" "~ app.user.lastname }}</h2>
            <p>Compte créé le {{ app.user.createdAt|date }}</p>
            <p>
            <a href="{{ path('app_account_edit')}}">Modifier votre compte</a>
            </p>
            </div>
            </div>
            
        <div class = "container text-center">
        <div class = "row">
               {% for video in app.user.videos %} 
        <article class="col-4">
            {# <h1>{{ pin.getTitle() }}</h1>  #}
            <h2><a href="{{ path('app_video_show', {id: video.id}) }}" style="text-decoration:none">{{ video.title }} </a></h2>
             <iframe width="400" height="200" src={{video.videoLink}}></iframe>
            <p>{{ video.description }}</p>
              
            {# <p>Submitted {{ pin.createdAt|date }}</p> #}
            <p>Crée {{ video.createdAt|ago }} <p>par {{ video.user.firstname }} {{video.user.lastname }}</p></p>  
            {# <p>By {{ pin.user.firstname ~ " " ~ pin.user.lastname }}</p> #}
            
        </article>
    {% else %}
           <p>Pardon,  pas encore de videos</p>
    {% endfor %}
        </div>
    </div>
{% endblock %}

